<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/outDoor"
                    android:layout_weight="1"
                    android:text="@string/outdoor"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quarter_left_top" />

                <Button
                    android:id="@+id/knowledge"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quarter_top_right"
                    android:text="@string/knowledge"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/gamesButton"
                    android:layout_weight="1"
                    android:text="games"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quarter_bottom_left" />

                <Button
                    android:id="@+id/aspiration"
                    android:layout_weight="1"
                    android:text="@string/aspiration"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quarter_bottom_right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>